<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/iv_item_camera_all_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_camera_all_default"
            android:scaleType="center"
            android:src="@drawable/camera_play" />

        <TextView
            android:id="@+id/tv_item_camera_all_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="客厅摄像头" />

        <TextView
            android:id="@+id/tv_item_camera_all_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_tv_camera_online"
            android:gravity="center"
            android:text="@string/camera_online" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_camera_all_btn">

        <Button
            android:id="@+id/btn_item_camera_share"
            android:layout_width="0dp"
            android:layout_height="@dimen/camera_btn_height"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableStart="@drawable/camera_share"
            android:paddingStart="20dp"
            android:text="@string/camera_share"
            android:textColor="@color/white"
            android:gravity="center"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <Button
            android:id="@+id/btn_item_camera_settings"
            android:layout_width="0dp"
            android:layout_height="@dimen/camera_btn_height"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableStart="@drawable/camera_settings"
            android:paddingStart="20dp"
            android:text="@string/camera_settings"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
