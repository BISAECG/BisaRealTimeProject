<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bisa.health.UserInfoActivity" >

    <RelativeLayout
        android:id="@+id/abar_title"
        android:background="@color/color_default_bg"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:background="@drawable/menu_back_bg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_search_title"
            tools:text="中间位置"
            android:text="@string/s_opt_sex" />

        <TextView
            android:id="@+id/tv_seuucess"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_search_title"
            tools:text="中间位置"
            android:text="@string/s_success" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_male"
        android:layout_below="@+id/abar_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="@string/s_sex_male"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_male"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/xuanzhong" />


    </RelativeLayout>

    <View
        android:id="@+id/ling_b"
        android:layout_centerHorizontal="true"
        android:background="@color/color_bar_bg"
        android:layout_below="@+id/rl_male"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/rl_female"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/ling_b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="@string/s_sex_female"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_famale"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/xuanzhong" />
    </RelativeLayout>





</RelativeLayout>