<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_login"
    android:orientation="horizontal"
    android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_area_code"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:background="#fff"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_areacode"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:textSize="16sp" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/down_arrow" />

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/yline" />

        </LinearLayout>



        <!-- 18682268551-->
        <EditText
            android:id="@+id/tv_iphone"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="fill"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="@string/login_hint_iphone"
            android:inputType="phone"
            android:maxLength="20"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/tv_verify"
            android:text=""
            android:textSize="16sp">

        </EditText>

        <LinearLayout
            android:id="@+id/bt_dropdown"
            android:layout_width="94dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/imgbtn_smsSend"
                android:layout_width="94dp"
                android:layout_height="27dp"
                android:background="@drawable/sms_enabled"
                android:gravity="center"
                android:text="@string/tip_sms_code"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>


