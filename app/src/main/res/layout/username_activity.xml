<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_default_bg"
    tools:context="com.bisa.health.UserInfoActivity" >


    <RelativeLayout
        android:id="@+id/abar_title"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:background="@drawable/menu_back_bg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_search_title"
            tools:text="中间位置"
            android:text="@string/s_opt_username" />

        <TextView
            android:id="@+id/tv_seuucess"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_search_title"
            tools:text="中间位置"
            android:text="@string/s_success" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/abar_title"
        android:id="@+id/rl_headimg"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:id="@+id/rl_clear"
            android:elevation="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/clear"
                android:layout_marginRight="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="15dp" />

        </RelativeLayout>

        <EditText
            android:elevation="1dp"
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_marginLeft="23dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:hint="@string/hint_username"
            android:inputType="text"
            android:maxLength="20"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>