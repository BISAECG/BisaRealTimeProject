<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    tools:context="com.bisa.health.MainActivity" >


    <RelativeLayout
        android:background="@color/color_default_bg"
        android:id="@+id/bolck_bar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <CheckBox
            android:id="@+id/ibtn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/menu_back_bg"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_sos_contact_user"
            android:textColor="@color/color_search_title"
            android:textSize="16sp"
            tools:text="中间位置" />


        <ImageButton
            android:id="@+id/ibtn_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/menu_add_dev" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/bolck_bar"
        android:id="@+id/rl_tip"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_tip"
            android:layout_centerHorizontal="true"
            android:text="@string/msg_add_contacts"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/color_login_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view_line"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@color/color_login_type"
            android:layout_below="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bolck_bar"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >


        <ListView
            android:id="@+id/list_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </ListView>

    </LinearLayout>

</RelativeLayout>