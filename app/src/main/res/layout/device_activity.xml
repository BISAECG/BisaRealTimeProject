<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bisa.health.AddActivity" >

    <com.bisa.health.cust.view.ActionBarView
        app:isPre="true"
        app:preIco="@drawable/menu_back_bg"
        app:title="@string/title_menu_adddev"
        android:id="@+id/abar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>


    <LinearLayout
        android:id="@+id/rl_nav_title"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_productnum"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:text="@string/title_product_num"
            android:textColor="@color/color_search_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_productnum_value"
            android:layout_width="309dp"
            android:layout_height="41dp"
            android:layout_marginTop="13dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/dev_view_bg"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:enabled="true"
            android:hint="@string/tip_click_find_device"
            android:singleLine="true"
            android:textColor="@color/color_search_title"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_dev_pair"
            android:layout_width="309dp"
            android:layout_height="41dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/white"
            android:text="@string/title_pair_device"
            android:background="@drawable/pair_enabled" />

        <Button
            android:id="@+id/img_warning_tip"
            android:layout_width="309dp"
            android:layout_height="21dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_search_title"
            android:background="@color/white"
            android:text="@string/title_search_tip"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_pair_commit"
            android:layout_width="309dp"
            android:layout_height="41dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/white"
            android:text="@string/title_pair_device_commit"
            android:background="@drawable/dev_pair_commit"/>
    </LinearLayout>

</RelativeLayout>