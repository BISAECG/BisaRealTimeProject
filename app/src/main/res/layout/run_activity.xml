<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bisa.health.RunActivity" >
    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/tv_xixin1"
            android:textSize="22sp"
            android:textColor="@color/run_color"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="100dp"
            tools:text="@string/app_xixin1"
            android:text="@string/app_xixin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv_xixin1"
            android:id="@+id/tv_xixin2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:textSize="22sp"
            tools:text="@string/app_xixin2"
            android:text="@string/app_xixin2"
            android:textColor="@color/run_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_loadmian"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_load"/>
                <TextView
                    android:id="@+id/tv_load"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    tools:text="加载中(5s)"/>

            </RelativeLayout>


        <Button
            android:visibility="gone"
            android:id="@+id/btn_onerun"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/shape_btn_white_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_btn_text"/>

    </RelativeLayout>

</RelativeLayout>