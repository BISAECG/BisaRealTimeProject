<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_wechat"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txt_contactname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="游懂" />

        <TextView
            android:id="@+id/txt_contactnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_contactname"
            android:layout_marginLeft="23dp"
            android:textColor="@color/color_centre_device"
            android:textSize="14sp"
            tools:text="13800138000" />

        <TextView
            android:id="@+id/txt_contactemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_contactnumber"
            android:layout_marginLeft="23dp"
            android:textColor="@color/color_centre_device"
            android:textSize="14sp"
            tools:text="9302759@qq.com" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dp"
            android:src="@drawable/left_arrow" />
    </RelativeLayout>



</RelativeLayout>